<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.rickturner.alexplayground.Controller"
      style="    -fx-background-color: linear-gradient(to left, #3730a3, #1f2937);;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
    >
        <HBox alignment="CENTER" spacing="10">
            <TextField prefWidth="500" style="-fx-padding: 10px; -fx-background-color: rgba(255, 255, 255)" fx:id="filenameInput"/>

            <Button text="Confirm" prefWidth="100" fx:id="confirmLabelNameBtn" onAction="#onConfirmButtonClick"
                    style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10px"/>
        </HBox>

        <Button text="Choose File" fx:id="choseFileBtn" onAction="#onFileChooseButtonClick"
                style="-fx-background-color: #4338ca; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10px"
                prefWidth="610"/>



            <VBox fx:id="pathContainer" prefWidth="610" maxWidth="610" alignment="CENTER" spacing="20.0" >

            </VBox>

    </VBox>
</VBox>

